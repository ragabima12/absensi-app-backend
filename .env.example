# Application
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1
FRONTEND_URL=http://localhost:8080

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/absensi_app

# Authentication
JWT_SECRET=your_jwt_secret_key_at_least_32_chars_long
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Face Recognition
FACE_RECOGNITION_THRESHOLD=0.6

# Location
MAX_LOCATION_DISTANCE=100

# Socket
SOCKET_CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Email (for password reset and registration)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=Absensi App <no-reply@example.com>

# Password Reset
RESET_PASSWORD_EXPIRE=3600000

# Admin default
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123